<main>
    <div class="container">
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-md-8 align-content-md-center">
                <div class="text-center">
                    <image src="images/hat.png" alt="detective hat" class="img-fluid"></image>
                </div>
                <Router AppAssembly="typeof(App).Assembly" Context="routeData">
                    <Found>
                        <RouteView RouteData="@routeData"/>
